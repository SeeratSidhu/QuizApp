<body>
  
  <h2 style="margin: 1rem 1rem 0 1rem">Login</h2>
  <form action="/login" method="POST" style="margin: 0.5rem 1rem 1rem 1rem;">
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" name="email"  placeholder="Enter Email" style="width: 300px; ">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" placeholder="Enter Password" style="width: 300px; ">
    </div>
    
    <button type="submit" class="btn btn-primary">Login</button>
  </form>
  

  
