  <body>
    <%- include('partials/_header') %>
    <div class="form-container">
      <form class="new-quiz-form">
        <div class="form-group new-question">
          <h3>Add new quiz</h3>
          <input
            type="text"
            class="form-control quiz-title"
            placeholder="Enter title"
            name="quiz-title"
            maxlength="60"
          />
        </div>

        <!----To be loaded with question forms dynamically----->

        <div class="general-form-buttons">
          <button type="button" class="add-question-btn">Add Question</button>
          <button type="submit" class="make-quiz-btn">Create A Quiz</button>
        </div>
      </form>
    </div>
    <script src="./scripts/app.js"></script>
  </body>
